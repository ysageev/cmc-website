{
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"lineWidth": 180
		}
	},
	"files": {
		"ignore": ["build/*", "node_modules", ".vscode", ".million"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"useNodejsImportProtocol": "off",
				"noArguments": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": {
					"level": "error",
					"fix": "safe"
				}
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noArrayIndexKey": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		}
	}
}
